<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/drinks"
        android:scaleType="centerCrop"
        android:paddingBottom="25dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SociaLite"
        android:id="@+id/textView"
        android:layout_marginTop="191dp"
        android:textColor="@color/colorTextIcons"
        android:textStyle="bold"
        android:background="#99607d8b"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="the app that helps you easily make and share plans"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:textColor="@color/colorTextIcons"
        android:textSize="16sp"
        android:background="#99607d8b"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="30dp"
        android:paddingTop="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Plans"
        android:id="@+id/makePlansButton"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryLight"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextIcons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Events"
        android:id="@+id/viewEventsButton"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryLight"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextIcons"
        android:layout_above="@+id/makePlansButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

</RelativeLayout>