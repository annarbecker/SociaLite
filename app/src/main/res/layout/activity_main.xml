<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/drinks"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="54dp">
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome user"
            android:id="@+id/welcomeTextView"
            android:textColor="@color/colorTextIcons"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SociaLite"
            android:id="@+id/textView"
            android:layout_marginTop="191dp"
            android:textColor="@color/colorTextIcons"
            android:textStyle="bold"
            android:background="#99607d8b"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the app that helps you easily make and share plans"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="@color/colorTextIcons"
            android:textSize="16sp"
            android:background="#99607d8b"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="30dp"
            android:paddingTop="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Events"
            android:id="@+id/viewEventsButton"
            android:layout_gravity="center"
            android:background="#99009688"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextIcons"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_view_agenda_white_24dp"
            android:layout_alignTop="@+id/makePlansButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_below="@+id/textView2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Plans"
            android:id="@+id/makePlansButton"
            android:layout_gravity="center"
            android:background="#99009688"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextIcons"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_add_white_24dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="30dp" />

    </RelativeLayout>


</RelativeLayout>