            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAX3Atb6BKqolX3c_v8UMJZf2O2IzSntBo"/>
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PlanActivity"/>
        <activity android:name=".ui.ConfirmActivity"/>
        <activity android:name=".ui.EventListActivity" />
        <activity android:name=".ui.EventDetailActivity"/>
    </application>

</manifest>